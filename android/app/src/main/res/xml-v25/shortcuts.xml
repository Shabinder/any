        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="com.dokar.any.MainActivity"
            android:targetPackage="com.dokar.any">
            <extra
                android:name="extra.target_destination"
                android:value="download"/>
        </intent>
    </shortcut>
